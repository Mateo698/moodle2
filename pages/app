class App extends React.Component {
  constructor(props) {
    super(props);
    this.state = {};
  }

  handleChange = e => {
    const { name, value } = e.target;

    this.setState({
      [name]: value
    });
  };

  render() {
    return (
      <div className="radio-buttons">
        Windows
        <input
          id="Question1"
          value=""
          name="platform"
          type="radio"
          onChange={this.handleChange}
        />
        Mac
        <input
          id="Question2"
          value=""
          name="platform"
          type="radio"
          onChange={this.handleChange}
        />
        Linux
        <input
          id="Question3"
          value=""
          name="platform"
          type="radio"
          onChange={this.handleChange}
        />
      </div>
    );
  }
}